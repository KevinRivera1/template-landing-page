---
import '@styles/global.css';
import '@fontsource-variable/onest';
import SEO from '@components/Landing/presentational/SEO.astro';
import site from '@data/site.json';
---
<!doctype html>
<html lang="en">
	<head>
		<SEO title={site.siteTitle} description={site.siteDescription} keywords={site.siteKeywords.join(', ')} image={site.siteImage} url={site.siteUrl}/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>

	:root {
		--color-negro       : #393939;
		--color-blanco      : #ffffff;
		--tipo-principal    : Onest Variable, Arial, sans-serif;
		--tipo-secundaria   : Verdana, sans-serif;
		--espaciado-base    : 1.5;
		--animacion-duracion: 0.2s;
		--borde-foco        : 2px solid #005fcc;
	}
	
	:where(*, *::before, *::after) {
		margin        : 0;
		padding       : 0;
		border        : 0;
		box-sizing    : border-box;
		vertical-align: baseline;
	}

	:where(html) {
		height         : 100%;
		font-size      : 100%;
		line-height    : var(--espaciado-base);
		scroll-behavior: smooth;
		-webkit-text-size-adjust: 100%;
		text-size-adjust: 100%;
	}

	:where(body) {
		min-height             : 100vh;
		font-family            : var(--tipo-principal);
		font-size              : 1rem;
		color                  : var(--color-negro);
		background-color       : var(--color-blanco);
		line-height            : var(--espaciado-base);
		-webkit-font-smoothing : antialiased;
		-moz-osx-font-smoothing: grayscale;
		hyphens                : auto;
	}

	:where(img, picture, video, iframe, figure) {
		max-width      : 100%;
		height         : auto;
		display        : block;
		object-fit     : cover;
		object-position: center;
	}
	:where(svg) {
		width  : 100%;
		height : auto;
		display: block;
		fill   : currentColor;
	}
</style>
