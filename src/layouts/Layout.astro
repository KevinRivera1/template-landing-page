---
import '@styles/global.css';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Landing Page - Template Desing</title>
		<link rel="icon" type="image/svg+xml" href="src/assets/svg/logo.svg" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>

	:root {
		--color-negro       : #393939;
		--color-blanco      : #ffffff;
		--tipo-principal    : Helvetica, Arial, sans-serif;
		--tipo-secundaria   : Verdana, sans-serif;
		--espaciado-base    : 1.5;
		--animacion-duracion: 0.2s;
		--borde-foco        : 2px solid #005fcc;
	}
	
	:where(*, *::before, *::after) {
		margin        : 0;
		padding       : 0;
		border        : 0;
		box-sizing    : border-box;
		vertical-align: baseline;
	}

	:where(html) {
		height         : 100%;
		font-size      : 100%;
		line-height    : var(--espaciado-base);
		scroll-behavior: smooth;
		-webkit-text-size-adjust: 100%;
		text-size-adjust: 100%;
	}

	:where(body) {
		min-height             : 100vh;
		font-family            : var(--tipo-principal);
		font-size              : 1rem;
		color                  : var(--color-negro);
		background-color       : var(--color-blanco);
		line-height            : var(--espaciado-base);
		-webkit-font-smoothing : antialiased;
		-moz-osx-font-smoothing: grayscale;
		hyphens                : auto;
	}

	:where(img, picture, video, iframe, figure) {
		max-width      : 100%;
		height         : auto;
		display        : block;
		object-fit     : cover;
		object-position: center;
	}
	:where(svg) {
		width  : 100%;
		height : auto;
		display: block;
		fill   : currentColor;
	}
</style>
